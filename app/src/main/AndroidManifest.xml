<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ggalasso.contactviewer_hw2_bpc" >

    <!--
        <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />
    -->

    <uses-permission android:name="android.permissions.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactDetails"
            android:label="@string/title_activity_contact_details"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AddContact"
            android:label="@string/title_activity_add_contact"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".EditContact"
            android:label="@string/title_activity_edit_contact"
            android:parentActivityName=".ContactDetails" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ContactDetails" />
        </activity>
        <activity
            android:name=".SearcheableActivity"
            android:label="@string/title_activity_searcheable">
        <intent-filter>
            <action android:name="android.intent.action.SEARCH" />
        </intent-filter>
        <meta-data android:name="android.app.searchable"
            android:resource="@xml/searchable"/>

        </activity>
    </application>

</manifest>
